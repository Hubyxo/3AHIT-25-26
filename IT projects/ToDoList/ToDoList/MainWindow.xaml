<Window x:Class="ToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ToDo Liste" Height="450" Width="800"
        Background="#f0f0f0">

    <Grid Margin="20">
        <Border Background="White" CornerRadius="15" Padding="20"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <StackPanel>
                <!-- Titel -->
                <TextBlock Text="ToDo Liste" FontSize="20" FontWeight="Bold"
                           Foreground="#333" HorizontalAlignment="Left" Margin="0,0,0,10"/>

                <!-- Liste -->
                <ListBox Name="TodoList" Height="200" Margin="0,0,0,10"
                         Background="#fafafa" BorderBrush="#ddd" BorderThickness="1"
                         Padding="5" FontSize="14">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Title}" IsChecked="{Binding IsDone, Mode=TwoWay}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </ListBox.Resources>
                </ListBox>

                <!-- Filter RadioButtons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <RadioButton x:Name="rbAll" Content="Alle" IsChecked="True"
                                 Checked="FilterChanged" Margin="10,0"/>
                    <RadioButton x:Name="rbDone" Content="Erledigt"
                                 Checked="FilterChanged" Margin="10,0"/>
                    <RadioButton x:Name="rbUndone" Content="Unerledigt"
                                 Checked="FilterChanged" Margin="10,0"/>
                </StackPanel>

                <!-- TextBox -->
                <TextBox Name="TodoInput" Width="200" Height="30" Padding="5"
                         Margin="0,0,0,10" BorderBrush="#ccc" BorderThickness="1"
                         Background="#fff" FontSize="14">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Hinzufügen" Width="100" Height="30"
                            Background="#4CAF50" Foreground="White" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand"
                            Click="AddTodo">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Content="Speichern" Width="100" Height="30"
                            Background="#2196F3" Foreground="White" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand"
                            Click="SaveToFile">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Content="Löschen" Width="100" Height="30" Background="Red" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="DltTodo">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
